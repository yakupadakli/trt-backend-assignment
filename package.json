{
  "name": "trt-backend-assignment",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "engines": {
    "node": "21.7.1",
    "npm": ">=10.5.0"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon",
    "dev:debug": "nodemon --inspect",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "gitleaks": "gitleaks detect -v",
    "prepare": "lefthook install",
    "test": "jest --detectOpenHandles --forceExit",
    "coverage": "jest --coverage"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "author": "Yakup AdaklÄ± <yakup.adakli@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "ramda": "^0.30.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "eslint": "^9.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "gitleaks": "^1.0.0",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "lefthook": "^1.7.12",
    "lint-staged": "^15.2.8",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  }
}
